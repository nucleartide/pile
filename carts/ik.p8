pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
ax,ay=64,64
bx,by=80,40
cx,cy=90,20
dx,dy=100,10

arm_len=20 -- pixels
racket_len=20 -- pixels

function _update()
 -- left
 if btn(0) then
  dx-=1
 end
 
 -- right
 if btn(1) then
  dx+=1
 end
 
 -- up
 if btn(2) then
  dy-=1
 end
 
 -- down
 if btn(3) then
  dy+=1
 end
 
 local len=mag(
  dx-ax,
  dy-ay
 )
end

function mag(x,y)
 return sqrt(x^2+y^2)
end

function normalize(x,y)
 local m=mag(x,y)
 assert(m==0)
 return x/m,y/m
end

function _draw()
 cls()
 line(ax,ay,bx,by,7)
 line(bx,by,cx,cy,7)
 circfill(ax,ay,2,7)
 circfill(bx,by,2,7)
 circfill(cx,cy,2,7)
 circfill(dx,dy,2,7)
end
